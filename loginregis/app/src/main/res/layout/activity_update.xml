<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="UPDATE DADA"
        android:textAlignment="center"
        android:textSize="26dp"/>
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:textColor="@color/white"
                android:text="Nama :"
                android:textSize="18dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/unama"
                android:paddingLeft="5dp"
                android:hint="Nama"
                android:background="@drawable/bg_r"
                android:textColor="@color/white"
                android:paddingBottom="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:textColor="@color/white"
                android:text="Alamat :"
                android:textSize="18dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Alamat"
                android:paddingLeft="5dp"
                android:id="@+id/ualamat"
                android:background="@drawable/bg_r"
                android:textColor="@color/white"
                android:paddingBottom="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingTop="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Tempat Lahir :"
                android:textSize="18dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Tempat Lahir"
                android:background="@drawable/bg_r"
                android:id="@+id/utmpt"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:paddingBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingTop="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Tanggal Lahir :"
                android:textSize="18dp" />
            <EditText
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="yyyy-mm-dd"
                android:background="@drawable/bg_r"
                android:id="@+id/utgl"
                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingTop="16dp"
                android:textColor="@color/white"
                android:text="Jenis Kelamin :"
                android:textStyle="bold"
                android:textSize="18dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Jenis Kelamin"
                android:paddingLeft="5dp"
                android:id="@+id/ujenkel"
                android:textColor="@color/white"
                android:background="@drawable/bg_r"
                android:paddingBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:paddingTop="16dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Golongan Darah :"
                android:textSize="18dp" />
            <EditText
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Golongan Darah"
                android:id="@+id/ugoldar"
                android:background="@drawable/bg_r"
                android:textColor="@color/white"
                android:paddingBottom="10dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:text="UPDATE"
        android:id="@+id/updatebtn"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorSecond"/>
</RelativeLayout>